@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<nav class="navbar navbar-light navbar-expand-lg fixed-top bg-white clean-navbar">
  <div class="container">
    <a class="navbar-brand logo" href="#">Stock Portfolio Tracker</a>
    <button class="navbar-toggler" data-toggle="collapse" data-target="#main-nav"><span class="navbar-toggler-icon"></span></button>
    <div class="collapse navbar-collapse d-sm-inline-flex flex-sm-row-reverse" id="main-nav">
      <ul class="navbar-nav">
        @if (SignInManager.IsSignedIn(User))
        {
          <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity.Name!</a>
          </li>
          <li class="nav-item">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
              <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
            </form>
          </li>
        }
        else
        {
          <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Register</a>
          </li>
          <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Login</a>
          </li>
        }
      </ul>
      <ul class="nav navbar-nav flex-grow-1">
        <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Index">Home</a></li>
        <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="AboutUs">About Us</a></li>
      </ul>
    </div>
  </div>
</nav>

